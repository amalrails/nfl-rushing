<h2 class="sub-header">Rushings</h2>
<div class="column">
  <div class="table-responsive col-md-15">
    <table class="table table-striped table-hover table-bordered">
      <thead>
        <tr>
          <th><%= sort_link(@q, :player) %></th>
          <th>Team</th>
          <th>Pos</th>
          <th>Att</th>
          <th>Att/g</th>
          <th><%= sort_link(@q, :yds) %></th>
          <th>Avg</th>
          <th>Yds/g</th>
          <th><%= sort_link(@q, :td) %></th>
          <th><%= sort_link(@q, :lng) %></th>
          <th>1st</th>
          <th>1st%</th>
          <th>20+</th>
          <th>40+</th>
          <th>Fum</th>
        </tr>
      </thead>
      <tbody>
        <% @rushings.each do |rushing| %>
          <tr>
            <td><%= rushing.player %></td>
            <td><%= rushing.team %></td>
            <td><%= rushing.pos %></td>
            <td><%= rushing.att %></td>
            <td><%= rushing.att_by_g %></td>
            <td><%= rushing.yds %></td>
            <td><%= rushing.avg %></td>
            <td><%= rushing.yds_by_g %></td>
            <td><%= rushing.td %></td>
            <td><%= rushing.lng %></td>
            <td><%= rushing.first %></td>
            <td><%= rushing.first_percentage %></td>
            <td><%= rushing.twenty_plus %></td>
            <td><%= rushing.forty_plus %></td>
            <td><%= rushing.fum %></td>
            <!-- <td><%= link_to 'Show', rushing %></td>
            <td><%= link_to 'Edit', edit_rushing_path(rushing) %></td>
            <td><%= link_to 'Destroy', rushing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     -->  </tr>
        <% end %>
        <%= will_paginate @rushings, list_classes: %w(pagination justify-content-end) %>
      </tbody>
    </table>
  </div>
</div>
